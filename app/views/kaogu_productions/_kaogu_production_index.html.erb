<div class='row' id='api-key-index'>
  <div class='col-sm-12'>
    <div class='card-box table-responsive'>
      <%= render 'shared/table_header',
                 title: '考古商品',
                 tooltip_message: "<h6>考古商品</h6>",
                 link: '#' %>
      <table id='datatable-responsive'
             class='table table-striped table-bordered dt-responsive nowrap'
             cellspacing='0' width='100%'>
        <thead>
          <tr>
            <th data-priority='1' style="min-width:50px">排名</th>
            <th data-priority='1'>商品名称</th>
            <th data-priority='1'>链接</th>
            <th data-priority='1'>图片</th>
            <th data-priority='1'>现价</th>
            <th data-priority='1'>旧价</th>
            <th data-priority='1'>佣金率</th>
            <th data-priority='1'>视频销量</th>
            <th data-priority='1'>商品浏览量</th>
            <th data-priority='3'>关联视频数</th>
            <th data-priority='3'>销售额</th>
            <th data-priority='3'>刷新时间</th>
          </tr>
        </thead>
        <tbody>
          <% kaogu_productions.each do |kaogu_production| %>
            <tr data-qa='datatable-row'>
              <td><%= kaogu_production.rank %></td>
              <td><%= text_area_tag :content, kaogu_production.name, style: "width: 180px; height: 80px;" %></td>
              <td><%= link_to kaogu_production.link.sub(/.*=/,''), kaogu_production.link %></td>
              <td><%= image_tag(kaogu_production.imageUrl) %></td>
              <td><%= kaogu_production.nowPrice %></td>
              <td><%= kaogu_production.oldPrice %></td>
              <td><%= kaogu_production.commissionRate %></td>
              <td><%= kaogu_production.videSales %></td>
              <td><%= kaogu_production.views %></td>
              <td><%= kaogu_production.videoCount %></td>
              <td><%= kaogu_production.sales %></td>
              <td><%= kaogu_production.updated_at.localtime %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script type='application/javascript'>
  <%= render 'shared/data_tables.js.erb',
             column_ordering: raw([[0, 'asc']]),
             column_defs: 5 %>
</script>
