<div class='row' id='api-key-index'>
  <div class='col-sm-12'>
    <div class='card-box table-responsive'>
      <%= render 'shared/table_header',
                 title: '视频',
                 tooltip_message: "<h6>视频</h6>",
                 link: '#' %>
      <table id='datatable-responsive'
             class='table table-striped table-bordered dt-responsive nowrap'
             cellspacing='0' width='100%'>
        <thead>
          <tr>
            <th data-priority='1'>名称</th>
            <th data-priority='1'>抖音号</th>
            <th data-priority='1'>视频名称</th>
            <th data-priority='1'>视频编号</th>
            <th data-priority='1'>视频链接</th>
            <th data-priority='1'>点赞</th>
            <th data-priority='1'>评论</th>
            <th data-priority='1'>关注</th>
            <th data-priority='3'>发布时间</th>
            <th data-priority='3'>刷新时间</th>
          </tr>
        </thead>
        <tbody>
          <% videos.each do |video| %>
            <tr data-qa='datatable-row'>
              <td><%= video.douyin_account.name %></td>
              <td><%= video.douyin_account.number %></td>
              <td><%= video.name %></td>
              <td><%= video.number %></td>
              <td><%= video.url %></td>
              <td><%= video.like %></td>
              <td><%= video.comment %></td>
              <td><%= video.attention %></td>
              <td><%= video.release_time.localtime %></td>
              <td><%= video.updated_at.localtime %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script type='application/javascript'>
  <%= render 'shared/data_tables.js.erb',
             column_ordering: raw([[1, 'asc']]),
             column_defs: 5 %>
</script>
