<%= form_for @user do |f| %>
  <div id='user-form'>
    <%= render 'shared/error_messages', object: f.object %>
    <div class='row'>
      <div class='col-md-12'>
        <%= f.label :user_name, '用户名称' %>
        <%= f.text_field :user_name, { required: '', 'data-parsley-maxlength': Constants::MAX_STRING_LEN, class: 'form-control' } %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <%= f.label :user_name, '用户邮箱' %>
        <%= f.text_field :email, { required: '', 'data-parsley-maxlength': Constants::MAX_STRING_LEN, class: 'form-control' } %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <%= f.label :user_name, '用户密码' %>
        <%= f.password_field :password, { required: '', 'data-parsley-maxlength': Constants::MAX_STRING_LEN, class: 'form-control' } %>
      </div>
    </div>
    <div class='row'>&nbsp;</div>
    <div class='row form-btn-container'>
      <div class='col-md-12'>
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
        <%= link_to '取消', users_path, class: 'btn btn-cancel' %>
      </div>
    </div>
  </div>
<% end %>
